#!/usr/bin/env node

/**
 * Module dependencies.
 */
const app = require('../app');
const debug = require('debug')('villagerdb:server');
const http = require('http');
const bluebird = require('bluebird');

/**
 * Redis and elasticsearch
 */
const redis = require('redis');
const elasticsearch = require('elasticsearch');

/**
 * Get port from environment and store in Express.
 */

const port = normalizePort(process.env.PORT || '3000');
app.set('port', port);

/**
 * Create HTTP server.
 */

const server = http.createServer(app);

/**
 * Listen on provided port, on all network interfaces, after connecting to redis and initializing the databases.
 */
server.on('error', onError);
server.on('listening', onListening);

const redisClient = bluebird.Promise.promisifyAll(redis.createClient());
redisClient.onAsync('connect')
    .then(() => {
        console.log('Connected to redis successfully.');

        // Initialize the databases.
        app.locals.db = {};
        const Villagers = require('../db/villagers');
        app.locals.db.villagers = new Villagers(redisClient);

        // Set up elasticsearch
        const es = new elasticsearch.Client();
        app.locals.es = es;

        // Empty out elasticsearch index
        es.indices.delete({
            index: 'zvillager'
        })
            .catch((e) => {}) // doesn't matter that it failed to delete
            .then(() => {
                console.log('a');
                return es.indices.create({
                    index: 'villfager'
                });
            })
            .then(() => {
                console.log('b');
                return es.index({
                    id: 'test',
                    index: 'villager',
                    body: {
                        'name': 'Rosie2',
                        'id': 'rosie2'
                    }
                });
            })
            .then(() => {
                console.log('c');
                return es.search({
                    index: 'villager',
                    body: {
                        query: {
                            match: {
                                name: {
                                    query: 'rosie',
                                    operator: 'and',
                                    fuzziness: 'auto'
                                }
                            }
                        }
                    }
                })
            })
            .then((results) => {
                console.log('d');
                console.log(results);
            });

        // Finally, listen on port.
        server.listen(port);
    });

/**
 * Normalize a port into a number, string, or false.
 */
function normalizePort(val) {
    const port = parseInt(val, 10);

    if (isNaN(port)) {
        // named pipe
        return val;
    }

    if (port >= 0) {
        // port number
        return port;
    }

    return false;
}

/**
 * Event listener for HTTP server "error" event.
 */
function onError(error) {
    if (error.syscall !== 'listen') {
        throw error;
    }

    const bind = typeof port === 'string'
        ? 'Pipe ' + port
        : 'Port ' + port;

    // handle specific listen errors with friendly messages
    switch (error.code) {
        case 'EACCES':
            console.error(bind + ' requires elevated privileges');
            process.exit(1);
            break;
        case 'EADDRINUSE':
            console.error(bind + ' is already in use');
            process.exit(1);
            break;
        default:
            throw error;
    }
}

/**
 * Event listener for HTTP server "listening" event.
 */
function onListening() {
    const addr = server.address();
    const bind = typeof addr === 'string'
        ? 'pipe ' + addr
        : 'port ' + addr.port;
    debug('Listening on ' + bind);
}
